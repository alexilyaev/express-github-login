<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <title>Express GitHub Login</title>
  </head>
  <body>

    <% if (user) { %>
    <h1>
      Welcome <%= user.name %>
      <img src="<%= user.avatar_url %>" alt="<%= user.name %>" width="32" height="32">
    </h1>
    <% } else { %>
    <h1><a href="auth/github">Login with GitHub</a></h1>
    <% } %>

    <script src="js/main.js"></script>
  </body>
</html>
